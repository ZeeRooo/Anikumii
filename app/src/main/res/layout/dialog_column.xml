<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <TextView
        android:id="@+id/textViewColumnsPortrait"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="10dp"
        android:text="@string/portrait"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Chip" />

    <NumberPicker
        android:id="@+id/numberPickerColumnsPortrait"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textViewColumnsPortrait"
        android:layout_alignEnd="@id/textViewColumnsPortrait"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textViewColumnsLandscape"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="10dp"
        android:text="@string/landscape"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Chip" />

    <NumberPicker
        android:id="@+id/numberPickerColumnsLandscape"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textViewColumnsLandscape"
        android:layout_alignStart="@id/textViewColumnsLandscape"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
