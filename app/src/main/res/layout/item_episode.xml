<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="?attr/selectableItemBackground"
    android:orientation="horizontal"
    android:paddingTop="@dimen/listTilePaddingTopBottom"
    android:paddingBottom="@dimen/listTilePaddingTopBottom">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingStart="@dimen/listPaddingEnd"
        android:paddingEnd="20dp"
        app:srcCompat="@drawable/ic_play_circle" />

    <TextView
        android:id="@+id/item_episodes_number"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical" />

    <ImageButton
        android:id="@+id/item_episode_about"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="@dimen/listPaddingEnd"
        app:srcCompat="@drawable/ic_info" />

</LinearLayout>

