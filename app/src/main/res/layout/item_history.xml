<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="88dp"
    android:background="?attr/selectableItemBackground"
    android:orientation="horizontal"
    android:paddingTop="@dimen/listTilePaddingTopBottom"
    android:paddingBottom="@dimen/listTilePaddingTopBottom">

    <ImageView
        android:id="@+id/item_chapter_img"
        android:layout_width="160dp"
        android:layout_height="match_parent"
        android:paddingStart="@dimen/listPaddingEnd"
        android:paddingEnd="20dp"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_chapter_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingBottom="1dp"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1" />

        <TextView
            android:id="@+id/item_chapter_count"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="1dp"
            android:textSize="12sp" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/item_history_about"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="@dimen/listPaddingEnd"
        app:srcCompat="@drawable/ic_info" />

</LinearLayout>