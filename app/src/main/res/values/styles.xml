<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="windowActionBar">false</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="Login" parent="Theme.MaterialComponents">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@android:color/black</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@android:color/white</item>
    </style>

    <style name="ToolbarEpisodes" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:shadowRadius">4</item>
        <item name="android:textColor">@android:color/primary_text_dark_nodisable</item>
        <item name="colorOnPrimary">@android:color/primary_text_dark_nodisable</item>
    </style>

    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/celestito</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
    </style>

    <style name="titleStyle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="navigationView" parent="ThemeOverlay.MaterialComponents.Dark">
        <item name="colorControlHighlight">@color/celestito</item>
    </style>

</resources>
