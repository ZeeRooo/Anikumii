<resources>

    <style name="AppTheme" parent="BaseTheme" />

    <style name="SettingsTheme" parent="BaseTheme" />

    <style name="BaseTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="ToolbarEpisodes" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:shadowRadius">4</item>
        <item name="android:textColorPrimary">@android:color/primary_text_dark_nodisable</item>
    </style>

    <style name="TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabTextColor">@color/disabled</item>
        <item name="tabSelectedTextColor">@android:color/primary_text_dark_nodisable</item>
    </style>

    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/celestito</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="hintTextColor">@color/celestito</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
    </style>

    <style name="titleStyle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

</resources>
